@using Microsoft.AspNetCore.Identity;
@using Project_COVID_19.Models;
@inject SignInManager<User> SignInManager;
@inject UserManager<User> UserManager;

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="account" asp-action="index" >Bienvenido @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  method="post" asp-controller="account" asp-action="logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Salir</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="account" asp-action="register">Registro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="account" asp-action="login">Usuario</a>
    </li>
}
</ul>
