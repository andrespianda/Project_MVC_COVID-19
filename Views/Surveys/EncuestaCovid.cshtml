@model Project_COVID_19.Models.Survey

@{
    ViewData["Title"] = "EncuestaCovid";
}

<div class="text-center">
    <h1 class="display-4">Encuesta</h1>
    

<div class="card">
  <div class="card-header" align="left">
    Datos Personales
  </div>
  <div class="card-body">

 <form asp-action ="EncuestaCovid">

    <div asp-validation-summary="All" class="form-row">
        <div class="form-group col-md-6" align="left">
            <label asp-for="Nombres">Nombres</label>
            <input asp-for="Nombres" class="form-control">
        </div>
        <div class="form-group col-md-6" align="left">
            <label asp-for="Apellidos">Apellidos</label>
            <input  class="form-control" asp-for="Apellidos" placeholder="-----">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2 ">
            <label asp-for ="Tipo_Id">Tipo Id</label>
            <select asp-for="Tipo_Id" class="form-control">
                <option selected>...</option>                                
                <option>RC - Registro Civil</option>
                <option>TI - Tarjeta de identidad</option>
                <option>CC - Cédula de ciudadanía</option>
                <option>CE - Cédula de extranjería</option>
                <option>PA - Pasaporte</option>
                <option>MS - Menor sin identificación</option>
                <option>AS - Adulto sin identidad</option>

            </select>
        </div>
        <div class="form-group col-md-10">
            <label asp-for="NIdentificacion">Identificacion</label>
            <input asp-for="NIdentificacion" class="form-control" placeholder="---">
        </div>
    </div>
    </form>


  </div>
</div>

<hr>


<div class="card">
  <div class="card-header" align="left">
    Informacion Servicio Hospitalario
  </div>
  <div class="card-body">

 <form>

    <div class="form-row">
        <div class="form-group col-md-12" align="left">
            <label asp-for="EncargadoEncuesta" >¿Quién diligencia la encuesta?</label>
            <input asp-for="EncargadoEncuesta" class="form-control" > 
        </div>
        <div class="form-group col-md-6" align="left">
            <label for="formGroupExampleInput">Tipo de atención</label>
            <select class="form-control" asp-for="Tipo_atencion">
                <option selected>...</option>                                
                <option>Consulta espontánea</option>
                <option>Consulta agendada</option>
            </select>
        </div>
        <div class="form-group col-md-6" align="left">
            <label asp-for="ServicioEncargado">¿A qué servicio se dirige?</label>
            <select class="form-control" asp-for="ServicioEncargado">
                <option selected>...</option>                                
                <option>Hospitalizacion</option>
                <option>UCI</option>
                <option>Consulta Externa</option>
                <option>Urgencias</option>
                <option>Serviciosde apoyo Dx y Terapeutico</option>
            </select>
        </div>


    </div>
    </form>


  </div>
</div>

<hr>




<div class="card">
