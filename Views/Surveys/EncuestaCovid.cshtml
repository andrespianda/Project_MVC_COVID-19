            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>



            </form>


  </div>
</div>





</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}